    "react-dom": "^16.4.0",
    "typescript": "^2.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/next": "^2.4.7",
    "@types/react": "^16.0.36",
    "lint-staged": "^7.1.3",
    "nodemon": "^1.12.1",
